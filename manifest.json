{
  "manifest_version": 3,
  "name": "PES Stats Paste - By PES Indie Team",
  "version": "0.1.0",
  "description": "Creates a floating button at the bottom right corner of the website that will allow you to paste your converted stats from PES Stats Copy Addon.",
  "permissions": ["clipboardRead"],
  "host_permissions": ["https://teditor.app/*"],
  "content_scripts": [
    {
      "matches": ["https://teditor.app/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PES Stats Paste",
    "default_icon": {
      "16": "img/icon-paste-16.png",
      "48": "img/icon-paste-48.png",
      "128": "img/icon-paste-128.png"
    }
  },
  "icons": {
      "16": "img/icon-paste-16.png",
      "48": "img/icon-paste-48.png",
      "128": "img/icon-paste-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pesstatspaste@pesindie.com",
      "strict_min_version": "79.0"
    }
  }
}
